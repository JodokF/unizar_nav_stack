<launch>
<!-- vim: set ft=xml noet : -->

  <arg name="server" default="192.168.0.100"/>

  <node pkg="vrpn_client_ros" type="vrpn_client_node" name="vrpn_client_node" output="screen">
    <rosparam subst_value="true">
      server: $(arg server)
      port: 3883

      update_frequency: 10.0
      frame_id: odom <!-- odom_ned -->

      # Use the VRPN server's time, or the client's ROS time.
      use_server_time: false
      broadcast_tf: true

      # Must either specify refresh frequency > 0.0, or a list of trackers to create
      #refresh_tracker_frequency: 1.0
      trackers:
      #- dummy
      #- base_link
      - goal_optitrack
      #- calibration_base
      - cine_mpc
      - GoPro
    </rosparam>
    <remap from="/vrpn_client_node/cine_mpc/pose" to="/optitrack/pose" />
  </node>

  <!-- Node to change the tf of the pose given by optitrack to match it with mavros-->
  <node pkg="optitrack_arena" type="optitrack_pose_tf" name="optitrack_pose_tf" output="screen"/>

  <!-- TF map <=> odom -->
  <node pkg="tf" type="static_transform_publisher" name="broadcaster_odom_ned" args="$0 0 0 3.14 0 0 odom odom_ned 100" />

  <!-- TF map <=> odom -->
  <node pkg="tf" type="static_transform_publisher" name="broadcaster_odom" args="0 0 0 0 0 0 map_ned odom 100" />

</launch>
